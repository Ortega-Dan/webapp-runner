#!/usr/bin/env bash

set -e

if [ "$TRAVIS_BRANCH" = 'master' ] && [ "$TRAVIS_PULL_REQUEST" == 'false' ]; then
  openssl aes-256-cbc -K $encrypted_8b77e0acf399_key -iv $encrypted_8b77e0acf399_iv -in etc/codesigning.asc.enc -out etc/codesigning.asc -d
  gpg --fast-import etc/signingkey.asc
fi

./mvnw --batch-mode  --settings etc/settings.xml release:perform
